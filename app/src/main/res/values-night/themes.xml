<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BetterDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="textAppearanceHeadline1">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="trackColor">@color/middle_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="primaryTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="secondaryTextColor">
        <item name="android:textColor">@color/middle_gray</item>
    </style>

    <style name="cardColor">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="itemColor">
        <item name="android:background">@drawable/card_background_night</item>
    </style>

    <style name="navBar">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="app">
        <item name="android:background">@color/black</item>
    </style>

    <style name="remove_icon">
        <item name="srcCompat">@drawable/ic_remove_icon_dark</item>
    </style>

</resources>