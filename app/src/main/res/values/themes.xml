<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BetterDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="trackColor">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.BetterDay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BetterDay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.BetterDay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="primaryTextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="secondaryTextColor">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="cardColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="itemColor">
        <item name="android:background">@drawable/card_background_light</item>
    </style>

    <style name="navBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="app">
        <item name="android:background">@color/very_light_gray</item>
    </style>

</resources>